<div class="row">
    <form action="/pirates/{{id}}?_method=PUT" method="POST" class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <label for="name">name:</label>
      <input type="text" name="name" class="form-control" value="{{pirate.name}}">
      </div>
    <div class="form-group">
      <label for="birthplace">birthplace:</label>
      <input type="text" name="birthplace" class="form-control" value="{{pirate.birthplace}}">
    </div>
    <div class="form-group">
      <label for="deathYear">death Year</label>
      <input type="number" name="deathYear" class="form-control" value="{{pirate.death_year}}">
    </div>
    <div class="form-group">
      <label for="base">base:</label>
      <input type="text" name="base" class="form-control" value="{{pirate.base}}">
    </div>
    <div class="form-group">
      <label for="nicknamet">nickname:</label>
      <input type="text" name="nickname" class="form-control" value="{{pirate.nickname}}">
    </div>
    <div>
      <input type="submit" value="Submit Changes" class="btn btn-default">
    </div>
  </form>
</div>